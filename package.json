{
  "name": "dengue-visualization",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "homepage": "./",

  "build": {
    "extends": null,
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "publish": {
      "provider": "github",
      "repo": "electron-cra-example",
      "owner": "johndyer24"
    }
  },

  "dependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.53",
    "@types/react-dom": "^16.9.8",
    "electron-is-dev": "^1.2.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "4.0.1",
    "typescript": "^4.0.3",
    "web-vitals": "^0.2.4"
  },
  "scripts": {
    "start:web": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "start:electron": "concurrently \"BROWSER=none yarn start:web\" \"tsc -p ./electron/ && wait-on http://localhost:3000 && electron .\"",
    "build:electron": "tsc -p ./electron/ && mkdir -p build/electron && cp -r electron/. build/electron",
    "package:electron": "electron-builder build -mwl -c.extraMetadata.main=build/electron/main.js --publish never",
    "release:electron": "yarn run build && yarn run build:electron && yarn run package:electron"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "electron": "^11.2.0",
    "electron-builder": "^22.9.1",
    "wait-on": "^5.2.1"
  }
}
